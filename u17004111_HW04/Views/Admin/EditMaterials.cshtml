@model IEnumerable<u17004111_HW04.Models.FileModel>


<!--
    Have 3 categories here for files (PDF etc), Videos, and Images. Selecting a category displays a list/table of all of the
    uploaded items of that type.
 -->

<h2>
    Edit Materials page.
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Jesus christ</h4>
    <table class="table">
        <tr>
            <th>
                Filename
            </th>
            <th>
                Approved
            </th>
            <th>
                Author
            </th>
        </tr>
        @if (Model != null)
        {
            foreach (var file in Model)
            {
    <tr>
        <td>@file.FileName <input type="text" placeholder="@file.FileName" name="filename" /> </td>
        <td>@file.Approved @Html.CheckBox("Approved")</td>
        <td>@file.Author </td>
        <td>@Html.ActionLink("Delete", "Delete", "File", new { filepath = file.selectedFilePath }, new { @class = "btn btn-danger"})</td>
    </tr>
            }
        }


    </table>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Admin page", "Admin")
</div>
