@{
    ViewBag.Title = "Home Page";
    var narratives = ViewData["Narratives"];
}
<!-- Display the structure diagram with a link to download the PDF's thereof -->
<h2>Class structure diagram</h2>
<br />
<div class="mx-auto">
    <img class="img-fluid" src="~/Resources/Other_Images/Diagrams/Class_diagram_rev1.0.png" />
</div>
<br />
<br />
<hr />

<!-- Make this a carousel of the UC diagrams with links to download the PDF's thereof -->
<h2>Use case diagrams</h2>
<br />
<div id="Use-case-diagrams" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#Use-case-diagrams" data-slide-to="0" class="active"></li>
        <li data-target="#Use-case-diagrams" data-slide-to="1"></li>
        <li data-target="#Use-case-diagrams" data-slide-to="2"></li>
        <li data-target="#Use-case-diagrams" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item">
            <img src="~/Resources/Other_Images/Diagrams/UC_Diagram1_Admin.drawio.png" class="d-block " alt="...">
            <div class="carousel-caption d-md-block">
                <h5>Admin sub-system</h5>
                <p>This sub-system includes to tasks enacted by a system adminstrator, such as reviewing materials and managing users.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Resources/Other_Images/Diagrams/UC_Diagram2_Student.drawio.png" class="d-block " alt="...">
            <div class="carousel-caption d-md-block">
                <h5>Student sub-system</h5>
                <p>This subsystem includes to tasks enacted by student users, such as the viewing and downloading of materials.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Resources/Other_Images/Diagrams/UC_Diagram3_Educator.drawio.png" class="d-block " alt="...">
            <div class="carousel-caption d-md-block">
                <h5>Educator sub-system</h5>
                <p>This subsystem includes to tasks enacted by educator users, such as uploading materials and managing uploaded materials.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Resources/Other_Images/Diagrams/UC_Diagram4_Admin.drawio.png" class="d-block " alt="...">
            <div class="carousel-caption d-md-block">
                <h5>Admin sub-system</h5>
                <p>This subsystem includes to tasks related mainly to account creation and management.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-target="#Use-case-diagrams" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#Use-case-diagrams" data-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="sr-only">Next</span>
    </button>
</div>
<br />
@Html.ActionLink("Download diagrams", "DownloadUC", "File", null, new { @class = "btn btn-success" })
<br />
<hr />

<!-- Make this a carousel of the UC narratives you draw with links to download the PDF's thereof -->
<div class="container-fluid">
    <!-- Display the narratives with link to download the PDF's thereof -->
    <h2>Use case narratives</h2>

    <br />
    @Html.ActionLink("Download narratives", "DownloadUCN", "File", null, new { @class = "btn btn-success" })
    <br />
    <br />
    <hr />
</div>



